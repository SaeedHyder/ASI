<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/app_red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
       <!-- <item name="android:windowTranslucentStatus">true</item>-->

    </style>
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/app_text_color</item>
        <item name="colorControlNormal">@color/app_text_color</item>
        <item name="colorControlActivated">@color/app_text_color</item>
        <item name="colorControlHighlight">@color/app_text_color</item>
    </style>


</resources>