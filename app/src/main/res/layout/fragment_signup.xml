<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:src="@drawable/logo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:theme="@style/EditTextHint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/name"
                android:hint="@string/full_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/view_line_color" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:theme="@style/EditTextHint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/mail"
                android:hint="@string/email_address"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/view_line_color" />

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:theme="@style/EditTextHint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:drawableStart="@drawable/lock"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/x14" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/view_line_color" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:theme="@style/EditTextHint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_confirpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:drawableStart="@drawable/lock"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/x14" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/view_line_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:src="@drawable/phone" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/Countrypicker"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x35"
                android:layout_marginTop="@dimen/x5"
                app:ccpDialog_textColor="@color/black"
                app:ccp_autoDetectCountry="false"
                app:ccp_autoFormatNumber="false"
                app:ccp_contentColor="@color/app_text_color"
                app:ccp_defaultNameCode="AE"
                app:ccp_hintExampleNumber="true"
                app:ccp_hintExampleNumberType="MOBILE"
                app:ccp_showArrow="false"
                app:ccp_showFlag="false"
                app:ccp_showNameCode="false"
                app:ccp_textGravity="RIGHT"

                app:ccp_textSize="@dimen/x14" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:background="@color/transparent"
                    android:digits="0123456789"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="16"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/x14" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_line_color" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:theme="@style/EditTextHint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/company"
                android:hint="@string/company"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/view_line_color" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:theme="@style/EditTextHint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/designation"
                android:hint="@string/designation"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/view_line_color" />


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/button"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:orientation="horizontal">

            <com.app.asi.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/already_have_an_account"
                android:layout_marginEnd="@dimen/x4"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />
            <com.app.asi.ui.views.AnyTextView
                android:id="@+id/btnSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sign_in_"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_semibold" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>