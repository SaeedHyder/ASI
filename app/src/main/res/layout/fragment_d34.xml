<?xml version="1.0" encoding="utf-8"?>
<com.otaliastudios.zoom.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical|horizontal"
    app:alignment="center"
    app:animationDuration="280"
    app:flingEnabled="true"
    app:hasClickableChildren="true"
    app:horizontalPanEnabled="true"
    app:maxZoom="5"
    app:maxZoomType="realZoom"
    app:minZoom="1"
    app:minZoomType="realZoom"
    app:overPinchable="true"
    app:overScrollHorizontal="true"
    app:overScrollVertical="true"
    app:transformation="none"
    app:transformationGravity="center"
    app:verticalPanEnabled="true"
    app:zoomEnabled="true">


    <RelativeLayout
        android:layout_width="@dimen/x360"
        android:layout_height="wrap_content"
        android:background="@color/d32"
   >

        <ImageView
            android:id="@+id/floor"
            android:layout_width="@dimen/x130"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_bottom"
            android:layout_marginTop="@dimen/x3_"
            android:layout_alignTop="@+id/rlTop"
            android:scaleType="fitXY"
            android:src="@drawable/d34_12" />

        <LinearLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/floor"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/candyWaterGame"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="@dimen/x60"
                android:src="@drawable/d34_09" />

            <ImageView
                android:id="@+id/bazookaBlast3Player"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/x60"
                android:layout_toEndOf="@+id/candyWaterGame"
                android:src="@drawable/d34_04" />

            <ImageView
                android:id="@+id/bazookaBlastFrontCounter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/x60"
                android:layout_toEndOf="@+id/bazookaBlast3Player"
                android:src="@drawable/d34_03" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/rlTop"
            android:layout_below="@+id/rlTop"
            android:layout_toEndOf="@+id/floor">

            <ImageView
                android:id="@+id/hangTime"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x75"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginStart="@dimen/x5_"
                android:src="@drawable/d34_11" />

            <ImageView
                android:id="@+id/darts"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x35"
                android:layout_marginStart="@dimen/x5_"
                android:layout_below="@+id/hangTime"
                android:src="@drawable/d34_10" />

            <ImageView
                android:id="@+id/pinball"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x60"
                android:layout_marginEnd="@dimen/x2_"
                android:layout_alignParentEnd="true"
                android:src="@drawable/d34_01" />

            <ImageView
                android:id="@+id/pongArcade"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/pinball"
                android:layout_marginEnd="@dimen/x8"
                android:src="@drawable/d34_06" />


            <ImageView
                android:id="@+id/pongCocktail"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/pongArcade"
                android:layout_marginEnd="@dimen/x8"
                android:src="@drawable/d34_07" />

            <ImageView
                android:id="@+id/fastTrackEvo"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x70"
               android:layout_alignBottom="@+id/darts"
                android:layout_toEndOf="@+id/hangTime"
                android:src="@drawable/d34_08" />

            <ImageView
                android:id="@+id/superKixx"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x100"
                android:layout_alignTop="@+id/rightTable"
                android:layout_marginTop="@dimen/x13"
                android:layout_toEndOf="@+id/fastTrackEvo"
                android:src="@drawable/d34_05" />


            <ImageView
                android:id="@+id/rightTable"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginEnd="@dimen/x15"
                android:layout_toStartOf="@+id/pinball"
                android:src="@drawable/d34_02" />


            <ImageView
                android:id="@+id/leftTable"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginTop="@dimen/x4"
                android:layout_alignStart="@+id/fastTrackEvo"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginStart="@dimen/x5"
                android:src="@drawable/d34_02" />


        </RelativeLayout>


    </RelativeLayout>


</com.otaliastudios.zoom.ZoomLayout>