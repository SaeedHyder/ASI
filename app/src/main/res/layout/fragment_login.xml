<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingEnd="@dimen/x25"
    android:paddingStart="@dimen/x25">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:gravity="bottom|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20"
            android:src="@drawable/logo" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="@dimen/x15">

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/app_text_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:hint="@string/email_address"
                android:drawableStart="@drawable/mail"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/app_text_color" />

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:textColorHint="@color/app_text_color"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:hint="@string/password"
                android:drawableStart="@drawable/lock"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingTop="@dimen/x10"
                android:text=""
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/app_text_color" />

        <com.app.asi.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:gravity="start"
            android:text="Trouble Loggin in?"
            android:textColor="@color/white"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />


        <com.app.asi.ui.views.AnyTextView
            android:id="@+id/btn_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:gravity="start"
            android:text="@string/click_here_to_retrieve_your_password"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/x12"
            app:typeface="@string/font_normal" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginTop="@dimen/x25"
            android:alpha="0.9"
            android:background="@drawable/button"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />


        <com.app.asi.ui.views.AnyTextView
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tap_here_to_create_a_new_account"
            android:textColor="@color/white"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />


    </LinearLayout>


</LinearLayout>

