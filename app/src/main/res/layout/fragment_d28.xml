<?xml version="1.0" encoding="utf-8"?>
<com.otaliastudios.zoom.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical|horizontal"
    app:alignment="center"
    app:animationDuration="280"
    app:flingEnabled="true"
    app:hasClickableChildren="true"
    app:horizontalPanEnabled="true"
    app:maxZoom="5"
    app:maxZoomType="realZoom"
    app:minZoom="1"
    app:minZoomType="realZoom"
    app:overPinchable="true"
    app:overScrollHorizontal="true"
    app:overScrollVertical="true"
    app:transformation="none"
    app:transformationGravity="center"
    app:verticalPanEnabled="true"
    app:zoomEnabled="true">

    <LinearLayout
        android:layout_width="@dimen/x200"
        android:layout_height="match_parent"
        android:background="@color/d32"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5_"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ring3Circus"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x110"
                android:scaleType="fitXY"
                android:src="@drawable/d28_04" />

            <ImageView
                android:id="@+id/table1"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_below="@+id/ring3Circus"
                android:layout_toEndOf="@+id/ring3Circus"
                android:layout_marginTop="@dimen/x15_"
                android:scaleType="fitXY"
                android:src="@drawable/d28_02" />





            <ImageView
                android:id="@+id/fruitNinjaVirtual"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x55"
                android:layout_marginTop="@dimen/x20_"
                android:layout_below="@+id/beatSaber"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x16"
                android:scaleType="fitXY"
                android:src="@drawable/d28_04_new" />
            <ImageView
                android:id="@+id/beatSaber"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x55"
                android:layout_marginTop="@dimen/x5_"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x8"
                android:scaleType="fitXY"
                android:src="@drawable/d28_03_new" />

            <ImageView
                android:id="@+id/mininoSoccer"
                android:layout_width="@dimen/x85"
                android:layout_height="@dimen/x90"
                android:layout_below="@+id/table1"
                android:layout_marginTop="@dimen/x23"
                android:layout_toStartOf="@+id/ringToss"
                android:layout_marginEnd="@dimen/x12_"
                android:scaleType="fitXY"
                android:src="@drawable/d28_03" />

            <ImageView
                android:id="@+id/ringToss"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x100"
                android:layout_marginTop="@dimen/x20"
                android:layout_below="@+id/table1"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/d28_05" />

            <ImageView
                android:id="@+id/letsBounce"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x100"
                android:layout_below="@+id/ringToss"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/x15_"
                android:scaleType="fitXY"
                android:src="@drawable/d28_06" />

            <ImageView
                android:id="@+id/hyperShoot"
                android:layout_width="@dimen/x87"
                android:layout_height="@dimen/x107"
                android:layout_below="@+id/mininoSoccer"
                android:layout_toStartOf="@+id/ringToss"
                android:layout_marginTop="@dimen/x15_"
                android:layout_marginEnd="@dimen/x13_"
                android:scaleType="fitXY"
                android:src="@drawable/d28_07" />


            <ImageView
                android:id="@+id/table2"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_below="@+id/hyperShoot"
                android:layout_alignStart="@+id/hyperShoot"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginStart="@dimen/x20"
                android:scaleType="fitXY"
                android:src="@drawable/d28_02" />

            <ImageView
                android:id="@+id/snapShot2"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/x75"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/letsBounce"
                android:src="@drawable/d28_snaps_new" />
            <ImageView
                android:id="@+id/vrRabbids"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x118"
                android:layout_below="@+id/hyperShoot"
                android:layout_marginTop="@dimen/x31"
                android:layout_marginStart="@dimen/x15"
                android:layout_alignStart="@+id/hyperShoot"
                android:layout_alignParentBottom="true"
                android:src="@drawable/d28_rabb_new" />


        </RelativeLayout>


    </LinearLayout>
</com.otaliastudios.zoom.ZoomLayout>