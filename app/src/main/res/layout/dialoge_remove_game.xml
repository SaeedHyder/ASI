<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x250"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/icon"
        android:background="@drawable/roundshapelayout"
        android:gravity="center"
        android:orientation="vertical">



        <com.app.asi.ui.views.AnyTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x40"
            android:alpha="0.7"
            android:gravity="center"
            android:text="@string/are_you_sure_you_want_to_remove_game"
            android:textColor="@color/black"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:layout_alignBottom="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x5"
                android:layout_weight="1"
                android:background="@drawable/rounded_red_button"
                android:text="@string/remove"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />



            <Button
                android:id="@+id/btn_No"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:background="@drawable/rounded_red_button"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/x65"
        android:layout_height="@dimen/x67"
        android:background="@drawable/white_circle"
        android:layout_marginBottom="@dimen/x30_"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/x6"
        android:src="@drawable/logo4" />




</RelativeLayout>